<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C6FFBC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktif Ogrenci Fragment"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtIDGetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ogrenci Numarası"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnGetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Getir" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numara     Ad Soyad Sınıf Bölüm"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtMesajlar"
            android:layout_width="120dp"
            android:layout_height="400dp"
            android:scrollbars="horizontal|vertical" />
        <TextView
            android:id="@+id/txtMesajlarAd"
            android:layout_width="140dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:scrollbars="horizontal|vertical" />
        <TextView
            android:id="@+id/txtMesajlarS"
            android:layout_width="40dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:scrollbars="horizontal|vertical" />
        <TextView
            android:id="@+id/txtMesajlarB"
            android:layout_width="100dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:scrollbars="horizontal|vertical" />

    </LinearLayout>
</LinearLayout>