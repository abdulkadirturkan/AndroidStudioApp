<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CEFFC6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Koordinator Mufredat Ekleme"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ders Adı"
        android:inputType="text"/>
    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ders Kodu"
        android:inputType="text"/>
    <EditText
        android:id="@+id/et_deptId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Universite - Departman Kodu"
        android:inputType="text"/>
    <EditText
        android:id="@+id/et_ects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ECTS"
        android:inputType="text"/>
    <EditText
        android:id="@+id/et_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sömestr"
        android:inputType="text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGuncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Güncelle" />

        <Button
            android:id="@+id/saveMufredat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaydet" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtIDGetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnGetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Getir" />

    </LinearLayout>
    <Button
        android:id="@+id/btnSil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sil" />
    <TextView
        android:id="@+id/txtMesajlar"
        android:layout_width="match_parent"
        android:layout_height="260dp"

        android:scrollbars="horizontal|vertical" />
</LinearLayout>