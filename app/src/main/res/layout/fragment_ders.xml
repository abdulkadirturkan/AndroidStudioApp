<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/unibackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Öğrenci Ders"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/display_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail"
        android:textSize="25sp"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/twBilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ders Adı Ders Kodu ECTS Semöstır Not"
        android:textSize="18sp"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/txtMesajlar"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:textSize="19sp"
        android:background="#10000000"
        android:scrollbars="horizontal|vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toplam AKTS"
            android:textSize="23sp"
            android:layout_weight="1"
            android:ems="5"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/twDersAKTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toplam AKTS"
            android:textSize="23sp"
            android:layout_weight="1"
            android:ems="5"
            android:layout_centerInParent="true" />
    </LinearLayout>


</LinearLayout>