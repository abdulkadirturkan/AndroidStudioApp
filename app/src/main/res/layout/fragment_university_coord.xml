<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#CEFFC6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koordinator Universite"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>
    <EditText
        android:id="@+id/edit_text_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ülke"
        android:textSize="16sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isim"
        android:textSize="16sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edit_text_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şehir"
        android:textSize="16sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/edit_text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon"
        android:textSize="16sp"
        android:inputType="text"/>
    <Button
        android:id="@+id/saveUniversity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:onClick="saveNote"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtIDGetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ID"
            android:textSize="16sp"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnGetir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Getir" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGuncelle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Güncelle" />

    <Button
        android:id="@+id/btnSil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sil" />



    <TextView
        android:id="@+id/txtMesajlar"
        android:layout_width="match_parent"
        android:layout_height="315dp"

        android:scrollbars="horizontal|vertical" />


</LinearLayout>