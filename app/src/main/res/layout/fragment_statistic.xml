<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C6FFBC">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İstatistik Fragment"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBasari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Basarıya Göre" />

        <Button
            android:id="@+id/btnUni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Üniversitelere göre" />

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yıllara Göre" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtMesajlar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scrollbars="horizontal|vertical" />
        <TextView
            android:id="@+id/txtMesajlarN"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scrollbars="horizontal|vertical" />
        <TextView
            android:id="@+id/txtMesajlarK"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scrollbars="horizontal|vertical" />

    </LinearLayout>
    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="381dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="#C6FFBC" />


</LinearLayout>
</androidx.core.widget.NestedScrollView>